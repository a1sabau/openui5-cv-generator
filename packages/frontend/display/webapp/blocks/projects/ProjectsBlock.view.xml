<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:controls="ui5.cv.controls"
    controllerName="ui5.cv.blocks.projects.ProjectsBlockController"
>
    <List items="{path: 'Projects'}">
        <CustomListItem>
            <l:Grid
                class="sapUiSmallMarginTop"
                hSpacing="2"
                defaultSpan="XL12 L12 M12 S12"
            >
                <l:content>
                    <VBox>
                        <layoutData>
                            <l:GridData
                                linebreakS="true"
                                linebreakM="true"
                                span="XL4 L5 M12 S12"
                            />
                        </layoutData>
                        <VBox
                            class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                        >
                            <Title
                                text="{title}"
                                class="sapUiTinyMarginBottom"
                            />

                            <!-- <List
                                class="sapUiTinyMarginBottom"
                                items="{
                                path: 'links',
                                factory: '.projectListFactory'
                                }"
                            /> -->
                            <controls:LinkViewer links="{links}" />
                        </VBox>
                    </VBox>

                    <VBox>
                        <layoutData>
                            <l:GridData
                                span="XL8 L7 M12 S12"
                                linebreakS="true"
                                linebreakM="true"
                            />
                        </layoutData>
                        <controls:MarkdownViewer content="{description}" />
                    </VBox>
                </l:content>
            </l:Grid>
        </CustomListItem>
    </List>
</mvc:View>
