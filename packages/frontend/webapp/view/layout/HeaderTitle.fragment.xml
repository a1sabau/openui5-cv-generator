<core:FragmentDefinition
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
>
    <ObjectPageDynamicHeaderTitle>
        <expandedHeading>
            <m:Title
                text="{fullName}"
                wrapping="true"
            />
        </expandedHeading>

        <snappedHeading>
            <m:HBox>
                <m:VBox>
                    <m:Avatar
                        src="./assets/img/profile-final.png"
                        class="sapUiSmallMarginEnd"
                    />
                </m:VBox>

                <m:VBox>
                    <m:Title
                        text="{fullName}"
                        wrapping="true"
                    />
                    <m:Label text="{description}" />
                </m:VBox>
            </m:HBox>
        </snappedHeading>

        <expandedContent>
            <m:Label text="{description}" />
        </expandedContent>

        <snappedTitleOnMobile>
            <m:Title text="Object Page Header with Header Container" />
        </snappedTitleOnMobile>

        <actions>
            <m:Button
                id="idCvSwitchButton"
                text="Switch to Next.js CV"
                icon="sap-icon://action"
                press="switchToNextjsCV"
            />
        </actions>
    </ObjectPageDynamicHeaderTitle>
</core:FragmentDefinition>
