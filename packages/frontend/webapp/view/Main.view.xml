    <ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false"
    >
        <headerTitle>
            <core:Fragment
                fragmentName="ui5.cv.view.layout.HeaderTitle"
                type="XML"
            />
        </headerTitle>

        <headerContent>
            <core:Fragment
                fragmentName="ui5.cv.view.layout.HeaderContent"
                type="XML"
            />
        </headerContent>

        <sections>
            <ObjectPageSection
                titleUppercase="false"
                title="About"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <about:AboutBlock
                                class="sapUxAPObjectPageSubSectionAlignContent"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                titleUppercase="false"
                title="Experience"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <experience:ExperienceBlock
                                class="sapUxAPObjectPageSubSectionAlignContent"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                titleUppercase="false"
                title="Education"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <education:EducationBlock
                                class="sapUxAPObjectPageSubSectionAlignContent"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                titleUppercase="false"
                title="Certifications"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <certifications:CertificationsBlock
                                class="sapUxAPObjectPageSubSectionAlignContent"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                titleUppercase="false"
                title="Personal Projects"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <projects:ProjectsBlock
                                class="sapUxAPObjectPageSubSectionAlignContent"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>

    <!-- </m:content>
