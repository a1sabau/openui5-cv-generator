    controllerName="ui5.cv.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:certifications="ui5.cv.blocks.certifications"
    xmlns:projects="ui5.cv.blocks.projects"
    xmlns:education="ui5.cv.blocks.education"
    xmlns:experience="ui5.cv.blocks.experience"
    xmlns:about="ui5.cv.blocks.about"
    height="100%"
>
