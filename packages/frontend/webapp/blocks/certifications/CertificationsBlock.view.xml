<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="ui5.cv.blocks.certifications.CertificationsBlockController"
    core:require="{
        DateFormatter: 'ui5/cv/model/DateFormatter'
    }"
>
    <List items="{path: 'Certifications'}">
        <CustomListItem>
            <l:Grid
                class="sapUiSmallMarginTop"
                hSpacing="2"
                defaultSpan="XL12 L12 M12 S12"
            >
                <l:content>
                    <VBox>
                        <layoutData>
                            <l:GridData
                                linebreakS="true"
                                linebreakM="true"
                                span="XL4 L5 M12 S12"
                            />
                        </layoutData>
                        <VBox
                            class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                        >
                            <Title
                                text="{title}"
                                wrapping="true"
                                class="sapUiTinyMarginBottom"
                            />
                            <HBox
                                class="sapUiTinyMarginBottom"
                                renderType="Bare"
                            >
                                <Label
                                    text="Issued By:"
                                    class="sapUiSmallMarginEnd"
                                />
                                <Text text="{issuedBy}" />
                            </HBox>

                            <HBox
                                class="sapUiTinyMarginBottom"
                                renderType="Bare"
                            >
                                <Label
                                    text="Issued On:"
                                    class="sapUiSmallMarginEnd"
                                />
                                <Text
                                    text="{
                                    path: 'issuedOn',
                                    formatter: 'DateFormatter.formatDate'
                                 }"
                                    class="sapUiTinyMarginBottom"
                                />
                            </HBox>

                            <Button
                                id="showCertificationButton"
                                icon="sap-icon://action"
                                data:link="{link}"
                                iconFirst="false"
                                text="Show certification"
                                visible="{= ${link} ? true : false }"
                                press="openLink"
                            />
                            <Link
                                id="showCertificationLink"
                                text="Show certification"
                                visible="{= ${link} ? true : false }"
                                href="{link}"
                                target="_blank"
                            />
                        </VBox>
                    </VBox>

                    <VBox>
                        <layoutData>
                            <l:GridData
                                span="XL8 L7 M12 S12"
                                linebreakS="true"
                                linebreakM="true"
                            />
                        </layoutData>
                        <Text text="{description}" />
                    </VBox>
                </l:content>
            </l:Grid>
        </CustomListItem>
    </List>
</mvc:View>
